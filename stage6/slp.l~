%{
	#include <stdio.h>
	#include <string.h>
	#include "y.tab.h"
	extern YYSTYPE yylval;
%}

digit [0-9]

%%

{digit}+       	       {yylval.ival = atoi(yytext); return NUM;}
read           	       {return READ;}
write                  {return WRITE;}
if                     {return IF;}
then                   {return THEN;}
endif                  {return ENDIF;}
while                  {return WHILE;}
do                     {return DO;}
endwhile               {return ENDWHILE;}
decl                   {return DECL;}
enddecl                {return ENDDECL;}
integer                {return INTEGER;}
[a-zA-Z][a-zA-Z0-9]*   {printf("lex %s\n",yytext); yylval.var = strdup(yytext) ; return ID;}
[ \t]      {}
(?s:.)                      { return *yytext;}

%%

